---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.youtube.com/@SnowClouds" target="_blank">
				<span class="sr-only">Subscribe to me on Youtube!</span>
				<svg viewBox="0 0 24 24" width="32" height="32" fill="currentColor" aria-hidden="true">
					<path d="M23.498 6.186a2.946 2.946 0 0 0-2.073-2.081C19.37 3.5 12 3.5 12 3.5s-7.37 0-9.425.605A2.946 2.946 0 0 0 .502 6.186C0 8.26 0 12 0 12s0 3.74.502 5.814a2.946 2.946 0 0 0 2.073 2.081C4.63 20.5 12 20.5 12 20.5s7.37 0 9.425-.605a2.946 2.946 0 0 0 2.073-2.081C24 15.74 24 12 24 12s0-3.74-.502-5.814zM9.75 15.5v-7l6 3.5-6 3.5z"/>
				</svg>
			</a>
			<a href="https://github.com/snowcloudsx" target="_blank">
				<span class="sr-only">Star my repos!</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
					<path fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 
						0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 
						1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 
						0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 
						2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 
						1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 
						0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
				</svg>
			</a>
		</div>
	</nav>
</header>

<style>
	:root {
		--accent: #4fc3f7; /* You can change this to your brand color */
	}

	header {
		margin: 0;
		padding: 0 1em;
		background-color: #121212;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.6);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		color: #e0e0e0;
		text-decoration: none;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav a {
		padding: 1em 0.5em;
		color: #e0e0e0;
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: border-color 0.2s ease, color 0.2s ease;
	}

	nav a:hover {
		color: var(--accent);
	}

	nav a.active {
		border-bottom-color: var(--accent);
		color: var(--accent);
	}

	.social-links,
	.social-links a {
		display: flex;
		color: #e0e0e0;
	}

	svg {
		fill: currentColor;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
